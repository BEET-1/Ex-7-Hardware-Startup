<MainScreen>:
    #: import time __main__.time
    change: change
    motorSlider: motorSlider
    name: 'main'
    pos1: pos1
    direction: direction
    on_enter: root.start_button_thread()
    FloatLayout:
        size_hint: None, None

    Slider:
        id: motorSlider
        on_value: root.Accell()
        min: 0
        max: 100
        step: 1
        orientation: 'horizontal'
        x: root.width * 0
        y: root.height * 0.35



    DPEAButton:
        id: change
        text: "On"
        size: 100, 100
        x: root.width * 0.75
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: root.motorToggle()

    DPEAButton:
        id: direction
        text: "Left"
        size: 100, 100
        x: root.width * 0.25
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: root.motorToggle2()

    DPEAButton:
        id: show
        text: "Act"
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.25
        color: 0, 1, 0, 1
        on_press: root.start_showtime_thread()

    DPEAButton:
        id: states
        text: "State"
        size: 100, 100
        x: root.width * 0.4
        y: root.height * 0.4
        color: 0, 1, 0, 1
        on_press: root.switchStates()

    DPEAButton:
        id: pos1
        text: ""
        size: 100, 100
        x: root.width * 0.5
        y: root.height * 0.5
        color: 0, 1, 0, 1












